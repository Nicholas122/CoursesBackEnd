{% extends 'base.html.twig' %}

{% block body %}
    <div class="container theme-showcase" role="main">
        <div class="starter-template">
            <div class="text-center">
                <div class="page-header">
                    <h1>Login</h1>
                </div>

                <div class="row ">
                    <div class="col-lg-12">
                    </div>
                </div>
                <!--<div  id="loginBorderWrap">-->

                <div class="row">
                    {{ form_start(form, { 'attr' : { 'class': 'form-signin loginForm' } }) }}
                    {% for child in form.children|keys %}
                        <p class="login_field text-left">
                            {% if 'token' not in form_label(attribute(form.children,child)) %}
                                {{ form_label(attribute(form.children,child)) }}
                            {% endif %}
                            {{ form_widget(attribute(form.children,child)) }}
                        </p>
                    {% endfor %}
                    <p class="text-left"><a href="/forgot-password">Forgot
                            your password?</a></p>
                    <div class="row top-buffer top-buffer-auth">
                        <div style="margin-bottom: 50px;">
                            <span>or</span>
                        </div>
                    </div>
                    <a role="button" class="btn btn-lg btn-primary btn-block"
                       href="/connect/google">Login
                        with Google account</a>

                    <h4 style="margin-top: 40px; ">Don't have an account?</h4>
                    <a role="button" class="btn btn-lg btn-primary btn-block"
                       href="/registration">Sign Up</a>
                    {{ form_end(form) }}

                </div>
                <!--</div>-->
            </div>

            <!--<div id="signUpBottom" >-->
            <!--        <h4 id="signUpLabel">--><!--</h4>-->
            <!--        <a  role="button" class="btn btn-default btn-block singUpBtn" href="--><!--">--><!--</a>-->
            <!--</div>-->


        </div>
    </div>
{% endblock %}
