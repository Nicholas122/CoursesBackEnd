{% extends 'base.html.twig' %}

{% block body %}
<div class="container theme-showcase" role="main">
    <div class="starter-template">
        <link rel="stylesheet" href="/css/viewCourse.css">
        <script type="text/javascript" src="./DevCom Courses - DevCom Policy Cource_files/fitvids.js"></script>
        <div class="page-header">
            <div class="col-md-12" id="message" style="margin-left: 17px">
            </div>
            <div class="row viewCourseHeader">
                <div class="col-md-8">
                    <div class="col-md-12 viewCourseDetail">
                        <h1>{{ course.title }}
                            {% if is_granted('ABILITY_COURSE_UPDATE', course) %}
                            <small>
                                <a role="button" class="btn-link" title="Update Your Course" href="/courses-edit/{{course.id}}"><span class="glyphicon glyphicon-edit"></span></a>
                                <div class="dropdown menu-inline">
                                    <a class="dropdown-toggle" id="cAction" role="button" data-toggle="dropdown" data-target="#" href="#">
                                        <span class="glyphicon glyphicon-plus-sign"></span><b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="cAction">
                                        <li role="presentation"><a role="menuitem" href="/section/new/{{course.id}}" title="Add Section">Add Section</a></li>
                                        <li role="presentation"><a role="menuitem" href="http://courses.devcom.com/lecture/create_lecture/60" title="Add Lecture">Add Lecture</a></li>
                                        <li role="presentation"><a role="menuitem" href="http://courses.devcom.com/test/create_test/60" title="Add Test">Add Test</a></li>

                                    </ul>
                                </div>
                                <a class="btn-link btn-delete" title="Delete Your Course" data-delete-url="http://courses.devcom.com/course/delete_course/60" data-target="#deleteConfirmation" data-toggle="modal" href="#" data-confirm-body="Do you really want to delete this course?">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>

                            </small>
                            {% endif %}
                        </h1>
                        <p id="subtitle">
                            <small>{{ course.subtitle }}</small>
                        </p>
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                <span><strong>Created:</strong> <em>{{ course.creationDate|date('d-M-y') }}</em></span>
                            </div>

                            <div class="col-md-6 col-xs-6 text-right" style="padding-right: 26px;">
                                {% if course|isSubscriber(app.user) %}
                                <a role="button" href="/unsubscribe/{{ course.id }}" data-course-id="6"
                                class="btn btn-success unsubscribe"
                                data-loading-text="">
                            Unsubscribe </a>
                            {% else %}
                            <a role="button" href="/subscribe/{{ course.id }}" data-course-id="6"
                            class="btn btn-default subscribe" data-loading-text="">
                        Subscribe </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-12" id="courseSummery">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse"
                                href="http://internalcourses.devcom.com/course/view_course/6#collapse_summary">Course
                            Summary</a>
                        </h4>
                    </div>
                    <div id="collapse_summary" class="panel-collapse in">
                        <div class="panel-body">
                            {{ course.summary|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        {% if course.logo %}
        <img class="viewCourseLogo" src="/{{ course.logo }}">
        {% else %}
        <img class="viewCourseLogo" src="/default-course-logo.png">
        {% endif %}
    </div>
</div>

